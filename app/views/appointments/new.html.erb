<h1>Add Appointment</h1>
<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |p| [p.full_name, p.id] } %>
  <br />
  <%= f.label :date %>
  <%= f.text_field :date %>
  <br />
  <%= f.label :time %>
  <%= f.text_field :time %>
  <%= f.submit nil, class: "ui button blue" %>
<% end %>